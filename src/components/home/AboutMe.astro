---
import { Button, Card } from "@eliancodes/brutal-ui";
import { Image } from "astro:assets";

import headshot from "../../assets/portrait.jpg";
---

<section id="about" class="grid md:grid-cols-8 gap-8 mt-4">
	<h2 class="hidden">About Matt</h2>
	<div class="flex flex-col md:col-span-6">
		<Card>
			<p class="mt-4 outfit text-2xl md:text-5xl lg:text-7xl">
				ACR at <a
					class="underline underline-blue"
					target="_blank"
					href="https://daytonabeach.erau.edu/">Embry-Riddle</a
				>
			</p>
			<p class="sanchez mt-4 text-lg md:text-xl lg:text-3xl">
				Pilot, Flight Instructor
			</p>
            <p class="sanchez mt-4 text-lg md:text-xl lg:text-3xl">
				Runner, Athlete
			</p>
			<p class="sanchez mt-4 mb-8 text-lg md:text-xl lg:text-3xl">
				Located in Daytona Beach, FL
			</p>
			<Button href="mailto:contact@mattnanney.net">Contact me &rarr;</Button>
		</Card>
	</div>
	<Image
		class="object-cover h-full w-full rounded-lg md:col-span-2 border-3 border-black card-shadow"
		src={headshot}
		alt="Matt Nanney"
		width={headshot.width}
		height={headshot.height}
	/>
</section>